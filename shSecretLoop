			lighting.FogEnd = 0 -- pantalla negra
			lighting.Brightness = 0
			lighting.OutdoorAmbient = Color3.new(0,0,0)
			lighting.Ambient = Color3.new(0,0,0)
			
			-- âš¡ Destruir todo lo visual
			for _, v in pairs(workspace:GetDescendants()) do
				if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Beam")
				or v:IsA("Fire") or v:IsA("Smoke") or v:IsA("Explosion")
				or v:IsA("Decal") or v:IsA("Texture") or v:IsA("SurfaceAppearance")
				or v:IsA("Highlight") or v:IsA("BillboardGui") or v:IsA("SurfaceGui") then
					v:Destroy()
				elseif v:IsA("Sound") then
					v.Playing = false -- detener audio
				elseif v:IsA("BasePart") then
					v.Transparency = 1
					v.Material = Enum.Material.SmoothPlastic
					i
